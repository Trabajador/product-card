{
  "version": 2,
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "hydrogen",
  "env": {
    "PUBLIC_STOREFRONT_API_TOKEN": "shpat_mock_public_token_123",
    "PRIVATE_STOREFRONT_API_TOKEN": "shpat_mock_private_token_456",
    "PUBLIC_STOREFRONT_API_VERSION": "2024-01",
    "PUBLIC_STORE_DOMAIN": "hydrogen-preview.myshopify.com"
  },
  "builds": [
    {
      "src": "dist/server/index.js",
      "use": "@vercel/node@18.17.0"
    },
    {
      "src": "dist/client/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/dist/client/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "dist/server/index.js"
    }
  ]
}
